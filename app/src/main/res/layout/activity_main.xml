<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Lancer le client"
        android:id="@+id/startClientButton"
        android:layout_below="@+id/startServerButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start the server"
        android:id="@+id/startServerButton"
        android:layout_marginTop="39dp"
        android:layout_alignParentTop="true"
        android:layout_alignRight="@+id/startClientButton"
        android:layout_alignEnd="@+id/startClientButton" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="start GPS"
        android:id="@+id/gpsActivityButton"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <Button
        style="?android:attr/buttonStyleSmall"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Start map"
        android:id="@+id/mapActivityButton"
        android:layout_marginTop="82dp"
        android:layout_below="@+id/gpsActivityButton"
        android:layout_alignRight="@+id/gpsActivityButton"
        android:layout_alignEnd="@+id/gpsActivityButton" />

</RelativeLayout>
